<odoo>
    <data>

        <template id="portal_my_home_course" name="Portal My Home : course entries" inherit_id="portal.portal_my_home" priority="30">
            <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
                 <t t-if="course_count > 0" t-call="portal.portal_docs_entry">
                    <t t-set="title">Course inscription</t>
                    <t t-set="url" t-value="'/my/courses'"/>
                    <t t-set="count" t-value="course_count"/>
                </t>
            </xpath>
        </template>


    </data>
</odoo>
